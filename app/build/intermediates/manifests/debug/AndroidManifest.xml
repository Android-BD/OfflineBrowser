<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nolanlawson.offlinebrowser"
    android:versionCode="6"
    android:versionName="1.0.5" >

    <uses-sdk
        android:minSdkVersion="3"
        android:targetSdkVersion="4" />

    <application
        android:icon="@drawable/ic_launcher_browser"
        android:label="@string/app_name" >
        <activity
            android:name="com.nolanlawson.offlinebrowser.OfflineBrowserActivity"
            android:configChanges="orientation|keyboardHidden|keyboard"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.nolanlawson.offlinebrowser.OpenFileActivity"
            android:configChanges="orientation|keyboardHidden|keyboard"
            android:label="@string/openFile" />
        <activity
            android:name="com.nolanlawson.offlinebrowser.AboutActivity"
            android:label="@string/aboutOfflineBrowser"
            android:theme="@android:style/Theme.Dialog" />
    </application>

</manifest>