<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.nolanlawson.offlinebrowser"
      android:versionCode="3"
      android:versionName="1.0.2">
    <application android:icon="@drawable/ic_launcher_browser" android:label="@string/app_name">
        <activity android:name=".OfflineBrowserActivity"
                  android:label="@string/app_name"
                  android:configChanges="orientation|keyboardHidden|keyboard">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

		<activity android:name=".OpenFileActivity"
		android:label="@string/openFile"
		android:configChanges="orientation|keyboardHidden|keyboard"/>
				<activity android:name=".AboutActivity" android:label="@string/aboutOfflineBrowser"
			android:theme="@android:style/Theme.Dialog" />

    </application>
    <uses-sdk android:minSdkVersion="3" android:targetSdkVersion="4" />

</manifest> 